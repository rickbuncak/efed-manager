<% include ../partials/header %>

    <div class="container">
        <form action="/members/<%= user.email %>?_method=PUT" method="POST">
            <div class="form-group">
                <label for="displayName">Name:</label>
                <input class="form-control" type="text" name="displayName" value="<%= user.displayName %>" placeholder="John Smith">
            </div>
            <div class="form-group">
                <label for="location">From:</label>
                <input class="form-control" type="text" name="location" value="<%= user.location %>" placeholder="Parts Unknown">
            </div>
            <button class="btn btn-primary">Submit</button>
        </form>
    </div>

<% include ../partials/footer %>