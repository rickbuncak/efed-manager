<form action="/members/<%= user.username %>?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="user[displayName]">Name:</label>
                    <input class="form-control" type="text" name="user[displayName]" value="<%= user.displayName %>" placeholder="John Smith">
                </div>
                <div class="form-group">
                    <label for="user[location]">From:</label>
                    <input class="form-control" type="text" name="user[location]" value="<%= user.location %>" placeholder="Parts Unknown">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-default btn-block btn-primary">Submit!</button>
                </div>
</form>