<% include ../partials/header %>

    <div class="container">
        <form action="/roster/<%= wrestler.slug %>?_method=PUT" method="POST">
            <div class="form-group">
                <label for="name">Wrestler Name</label>
                <input type="text" class="form-control" name="name" value="<%= wrestler.name %>">
            </div>
            <div class="form-group">
                <label for="nickname">Nickname</label>
                <input type="text" class="form-control" name="nickname" value="<%= wrestler.nickname %>">
            </div>
            <div class="form-group">
                <label for="weight">Weight</label>
                <input type="text" class="form-control" name="weight" value="<%= wrestler.weight %>">
            </div>
            <div class="form-group">
                <label for="hometown">Hometown</label>
                <input type="text" class="form-control" name="hometown" value="<%= wrestler.hometown %>">
            </div>
            <div class="form-group">
                <label for="finisher">Finishing Move</label>
                <input type="text" class="form-control" name="finisher" value="<%= wrestler.finisher %>">
            </div>
            <div class="form-group">
                <label for="themeMusic">Theme Music</label>
                <input type="text" class="form-control" name="themeMusic" value="<%= wrestler.themeMusic %>">
            </div>
            <button class="btn btn-primary">Submit</button>
        </form>
    </div>

<% include ../partials/footer %>